---
import Layout from '../layouts/Layout.astro';
import { RandomTable } from '@/components/RandomTable';

import '@/styles/global.css'

import weatherTableData from "@/content/table/weather.json";

interface ITableEntry {
    index: number;
    "roll-min": number;
    "roll-max": number;
    label: string;
    description: string;
  }
 
  interface ITableData {
    name: string;
    type: number;
    tag: string;
    entries: ITableEntry[];
  }

const weatherData : ITableData = weatherTableData;
---

<Layout title="Rangers Records">
	<main class="flex flex-col items-center gap-5 p-5">
		<h1 class="text-5xl">The Rangers Records</h1>
    <RandomTable tableData = {weatherData} client:load></RandomTable>
	</main>
</Layout>